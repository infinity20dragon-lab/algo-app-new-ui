{
  "rules": {
    "activeSessions": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "presence": {
      "$uid": {
        ".read": true,
        ".write": "$uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin'"
      }
    },
    "cursors": {
      "$targetUserId": {
        "$cursorUserId": {
          ".read": "$targetUserId === auth.uid",
          ".write": "root.child('users').child(auth.uid).child('role').val() === 'admin'"
        }
      }
    },
    "sessions": {
      "$uid": {
        ".read": "$uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin'",
        ".write": "$uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin'"
      }
    },
    "activeControls": {
      "$targetUserId": {
        "$adminUserId": {
          ".read": "$targetUserId === auth.uid",
          ".write": "root.child('users').child(auth.uid).child('role').val() === 'admin'"
        }
      }
    },
    "logs": {
      "$uid": {
        "$date": {
          ".read": "$uid === auth.uid || root.child('users').child(auth.uid).child('role').val() === 'admin'",
          ".write": "$uid === auth.uid"
        }
      }
    },
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    }
  }
}
